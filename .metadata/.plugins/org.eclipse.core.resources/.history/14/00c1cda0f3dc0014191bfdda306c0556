package ce1002.a6.s103502548;
import java.util.*;
import java.text.*;
public class A6 {

	public static void main(String[] args) {
		String s;
		Scanner scanner=new Scanner(System.in);
		A6 a6=new A6();
		while(true)
		{
			System.out.println("===Week day inquire system===");
			System.out.print("Enter a day (ex: 2015-04-02 or 2015/04/02): ");
			s=scanner.nextLine();
			System.out.println(a6.dofw(s) throws ParseException);
			
		}
		// TODO Auto-generated method stub

	}
	public String dofw(String s) throws ParseException
	{
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy/MM/dd");
		Date date =sdf.parse(s);
		/*Calendar c=Calendar.getInstance();//取得目前時間
		c.setTime(date);
		int day=c.get(Calendar.DAY_OF_WEEK);*/
		SimpleDateFormat d=new SimpleDateFormat("u");
		return d.format(date);
	}
}
