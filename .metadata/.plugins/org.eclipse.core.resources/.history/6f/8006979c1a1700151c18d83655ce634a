			drawblue.addActionListener(this);
			back.addActionListener(this);
			drawred.addActionListener(this);

			con.add(c_option, new BorderLayout().EAST);
			con.add(c_court);
			con.setVisible(true);
		}
		if (e.getSource() == s1) {
			System.out.println("111111");
		}
		if (e.getSource() == s2) {
			System.out.println("22222");
		}
